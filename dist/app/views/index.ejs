        <!-- Begin Page Content -->
  <div class="container-fluid">

    <!-- Page Heading -->
    <h1></h1>
    <h1 class="h3 mb-2 text-gray-800">Dashboard</h1>
    <p class="mb-4">각 Symbol별 Total Score를 확인하실 수 있습니다.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Symbol Performance</h6>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Symbol</th>
                <th>Total Score</th>
                <th> Switch </th>
              </tr>
            </thead>
            <tbody>
              <% for (let index in totalScoreSet) { %>
                <tr>
                    <td><%= index %></td>
                    <td><%= totalScoreSet[index][0]['total_score'] %></td>
                    <td><button> On / Off </button></td>
                </tr>
              <% } %> 
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Algorithm Message Switch</h6>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Algorithms</th>
                <th> Switch </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                  <td> 1 </td>
                  <td><button> On / Off </button></td>
              </tr>
              <tr>
                  <td> 2</td>
                  <td><button> On / Off </button></td>
              </tr>
            </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  
